extends ../../layouts/default

block content
  .container
    h1.text-center.mt-4.mb-4 Thêm người dùng mới
    .card.shadow-sm
      .card-body
        form(action='/admin/users/create' method='POST')
          .mb-3
            label.form-label(for='username') Username
            input#username.form-control(type='text', name='username', required)
          .mb-3
            label.form-label(for='email') Email
            input#email.form-control(type='email', name='email', required)
          .mb-3
            label.form-label(for='password') Mật khẩu
            input#password.form-control(type='password', name='password', required)
          .mb-3
            label.form-label(for='role') Vai trò
            select#role.form-control(name='role', required)
              option(value='user') Người dùng
              option(value='admin') Quản trị
          .mt-4
            button.btn.btn-success(type='submit') Tạo người dùng
            a.btn.btn-secondary.ms-2(href='/admin/users') Hủy
