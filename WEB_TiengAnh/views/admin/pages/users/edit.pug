extends ../../layouts/default

block content
  .container-fluid
    h1.text-center Sửa thông tin người dùng
    .row
      .col-md-8.offset-md-2
        .card
          .card-body
            form(action=`/admin/users/edit/${user._id}` method='POST')
              .mb-3
                label.form-label(for='username') Username
                input#username.form-control(type='text', name='username', value=user.username, required)
              .mb-3
                label.form-label(for='email') Email
                input#email.form-control(type='email', name='email', value=user.email, required)
              .mb-3
                label.form-label(for='role') Vai trò
                select#role.form-control(name='role', required)
                  option(value='user', selected=user.role === 'user') Người dùng
                  option(value='admin', selected=user.role === 'admin') Quản trị
              .mt-4.d-flex.gap-2
                button.btn.btn-primary(type='submit') Cập nhật
                a.btn.btn-secondary(href='/admin/users') Hủy
