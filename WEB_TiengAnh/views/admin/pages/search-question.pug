extends ../layouts/default
doctype html
html
  head
    title Tìm kiếm câu hỏi TOEIC
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-4
      h1 Tìm kiếm câu hỏi

      form(action="/questions/search" method="GET")
        .mb-3
          label.form-label(for="keyword") Nhập từ khóa
          input.form-control(type="text" name="keyword" required)
        button.btn.btn-primary(type="submit") Tìm kiếm

      if questions
        h2 Kết quả tìm kiếm
        table.table.table-striped
          thead
            tr
              th ID
              th Mã Chứng Chỉ
              th Câu Hỏi
              th Đáp Án
          tbody
            each question in questions
              tr
                td= question._id
                td= question.MaCC
                td= question.question
                td= question.correctAnswer
