extends ../../layouts/default

block content
  .container.mt-4
    .d-flex.justify-content-between.align-items-center.mb-4
      h1 Thêm câu hỏi mới
      a.btn.btn-secondary(href='/admin/dashboard')
        i.fas.fa-arrow-left.me-2
        | Quay lại Dashboard

    .card
      .card-body
        form(action="/admin/questions/add" method="POST" enctype="multipart/form-data")
          .row.mb-3
            .col-md-4
              label.form-label(for="MaCC") Mã Chứng Chỉ
              select.form-select(name="MaCC" required)
                option(value="") -- Chọn chứng chỉ --
                option(value="TOEIC") TOEIC
                option(value="IELTS") IELTS
                option(value="TOEFL") TOEFL

            .col-md-4
              label.form-label(for="TopicN") Mã Đề
              input.form-control(type="number" name="TopicN" required min="1" placeholder="VD: 1")

            .col-md-4
              label.form-label(for="part") Phần Thi (Part)
              select.form-select(name="part" required)
                option(value="") -- Chọn phần --
                option(value="1") Part 1
                option(value="2") Part 2
                option(value="3") Part 3
                option(value="4") Part 4
                option(value="5") Part 5
                option(value="6") Part 6
                option(value="7") Part 7

          .row.mb-3
            .col-md-2
              label.form-label(for="questionN") Câu Hỏi Số
              input.form-control(type="number" name="questionN" required min="1" placeholder="VD: 1")

            .col-md-10
              label.form-label(for="question") Câu Hỏi
              textarea.form-control(name="question" rows="2" required placeholder="Nhập nội dung câu hỏi...")

          .mb-3
            label.form-label.fw-bold Đáp Án
            .row.g-3
              .col-md-6
                .input-group
                  span.input-group-text A
                  input.form-control(type="text" name="options[]" required placeholder="Nhập đáp án A")
              .col-md-6
                .input-group
                  span.input-group-text B
                  input.form-control(type="text" name="options[]" required placeholder="Nhập đáp án B")
              .col-md-6
                .input-group
                  span.input-group-text C
                  input.form-control(type="text" name="options[]" required placeholder="Nhập đáp án C")
              .col-md-6
                .input-group
                  span.input-group-text D
                  input.form-control(type="text" name="options[]" required placeholder="Nhập đáp án D")

          .row.mb-3
            .col-md-6
              label.form-label(for="correctAnswer") Đáp án đúng
              select.form-select(name="correctAnswer" required)
                option(value="") -- Chọn đáp án đúng --
                option(value="A") A
                option(value="B") B
                option(value="C") C
                option(value="D") D

            .col-md-6
              label.form-label(for="image") Hình ảnh (nếu có)
              input.form-control(type="file" name="image" accept="image/*")

          .mb-3
            label.form-label(for="explanation") Giải thích
            textarea.form-control(name="explanation" rows="3" placeholder="Giải thích đáp án...")

          .d-grid.gap-2.d-md-flex.justify-content-md-end
            button.btn.btn-primary.me-md-2(type="submit")
              i.fas.fa-save.me-2
              | Lưu câu hỏi
            button.btn.btn-outline-secondary(type="reset")
              i.fas.fa-undo.me-2
              | Nhập lại
