extends ../../layouts/default

block content
  .container.mt-5
    h1 Tạo câu hỏi Listening TOEIC

    form(method='POST', action='/admin/listening/create', enctype='multipart/form-data')
      .mb-3
        label.form-label(for='part') Part
        input.form-control(type='number', name='part', min='1', max='4', required)

      .mb-3
        label.form-label(for='audio') Upload file audio (MP3)
        input.form-control(type='file', name='audio', accept='audio/mp3,audio/mpeg', required)

      .mb-3
        label.form-label(for='questionText') Câu hỏi (nếu có)
        textarea.form-control(name='questionText', rows='2')

      .mb-3
        label.form-label(for='options') Các đáp án (dạng JSON)
        textarea.form-control(name='options', rows='2' required)
        small.text-muted Ví dụ: ["A", "B", "C", "D"]

      .mb-3
        label.form-label(for='correctAnswer') Đáp án đúng (ví dụ: A, B, C, D)
        input.form-control(type='text', name='correctAnswer', maxlength='1', required)

      .mb-3
        label.form-label(for='explanation') Giải thích (nếu có)
        textarea.form-control(name='explanation', rows='2')

      button.btn.btn-primary(type='submit') Tạo câu hỏi
