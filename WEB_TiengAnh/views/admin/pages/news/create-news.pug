form(action="/admin/news/create" method="POST" style="max-width: 600px; margin: auto; padding: 20px; background: #f9f9f9; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.1)")
  h2(style="text-align: center; margin-bottom: 20px") Tạo Tin Tức Mới

  label(for="title") Tiêu đề tin tức
  input(type="text" name="title" placeholder="Nhập tiêu đề..." required)

  label(for="image") URL hình ảnh
  input(type="text" name="image" placeholder="Dán URL hình ảnh..." required)

  label(for="content") Nội dung tin tức
  textarea(name="content" rows="5" placeholder="Nhập nội dung chi tiết..." required)

  label(for="question") Câu hỏi kiểm tra
  input(type="text" name="question" placeholder="Nhập câu hỏi..." required)

  label Câu trả lời
  input(type="text" name="options" placeholder="Câu trả lời 1" required)
  input(type="text" name="options" placeholder="Câu trả lời 2" required)
  input(type="text" name="options" placeholder="Câu trả lời 3" required)

  label(for="correctAnswer") Chỉ số đáp án đúng (0, 1 hoặc 2)
  input(type="number" name="correctAnswer" min="0" max="2" placeholder="Nhập chỉ số..." required)

  label(for="author") Tên người viết
  input(type="text" name="author" placeholder="Nhập tên tác giả..." required)

  button(type="submit" style="margin-top: 20px; width: 100%; padding: 10px; background: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer") Tạo Tin Tức
