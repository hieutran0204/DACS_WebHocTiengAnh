extends ../layouts/default

block content
  .container.mt-4
    h1 Thêm câu hỏi mới

    form(action="/admin/questions/add" method="POST" enctype="multipart/form-data")
      .mb-3
        label.form-label(for="MaCC") Mã Chứng Chỉ
        input.form-control(type="text" name="MaCC" required)

      .mb-3
        label.form-label(for="TopicN") Mã Đề 
        input.form-control(type="number" name="TopicN" required)

      .mb-3
        label.form-label(for="part") Phần
        input.form-control(type="number" name="part" required)

      .mb-3
        label.form-label(for="question") Câu Hỏi
        textarea.form-control(name="question" rows="3" required)

      .mb-3
        label.form-label Đáp Án
        .row
          .col-md-6.mb-2
            label(for="optionA") A
            input.form-control(type="text" name="options[]" required)
          .col-md-6.mb-2
            label(for="optionB") B
            input.form-control(type="text" name="options[]" required)
          .col-md-6.mb-2
            label(for="optionC") C
            input.form-control(type="text" name="options[]" required)
          .col-md-6.mb-2
            label(for="optionD") D
            input.form-control(type="text" name="options[]" required)

      .mb-3
        label.form-label(for="correctAnswer") Đáp án đúng
        select.form-control(name="correctAnswer" required)
          option(value="A") A
          option(value="B") B
          option(value="C") C
          option(value="D") D
 
      .mb-3
        label.form-label(for="explanation") Giải thích
        textarea.form-control(name="explanation" rows="3")
      .mb-3
        label.form-label(for="image") Hình ảnh
        input.form-control(type="file" name="image" accept="image/*")

      button.btn.btn-primary(type="submit") Thêm câu hỏi
