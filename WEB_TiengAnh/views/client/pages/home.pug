extends ../layouts/default
block content
    .d-flex.justify-content-end.mt-3.mb-3.pr-4
        a.btn.btn-outline-primary.mr-2(href="/auth/login") Đăng nhập
        a.btn.btn-outline-success(href="/auth/register") Đăng ký

    .container.mt-5
        h1 Chào mừng đến với trang IELTS
        p Đây là trang chủ với giao diện mặc định.
        .row
            .col-md-4
                .card
                    img.card-img-top(src="https://via.placeholder.com/300")
                    .card-body
                        h5.card-title Bài Test Listening
                        p.card-text Luyện tập kỹ năng nghe với các đề thi chuẩn.
                        a.btn.btn-primary(href="#") Làm bài ngay
            .col-md-4
                .card
                    img.card-img-top(src="https://via.placeholder.com/300")
                    .card-body
                        h5.card-title Bài Test Reading
                        p.card-text Kiểm tra khả năng đọc hiểu với các dạng bài phổ biến.
                        a.btn.btn-primary(href="#") Làm bài ngay
            .col-md-4
                .card
                    img.card-img-top(src="https://via.placeholder.com/300")
                    .card-body
                        h5.card-title Bài Test Writing
                        p.card-text Rèn luyện kỹ năng viết với các đề thi thực tế.
                        a.btn.btn-primary(href="#") Bắt đầu viết
